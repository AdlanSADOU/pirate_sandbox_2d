/*
 * MSVC++ Compiler options
 * https://docs.microsoft.com/en-us/cpp/build/reference/compiler-options-listed-by-category?view=msvc-160
 */
{
    "tasks": [
        { // New debug build
            "type": "shell",
            "label": "msvc++: [x64_Debug] Client build",
            "command": "cl.exe",
            "args": [
                "/std:c++latest",
                "/DEBUG",
                "/EHsc",
                "/MDd",
                "/Zi",
                "/MP",

                "/Fe:", "${workspaceFolder}/client/build/x64_Debug/client.exe",

                "${workspaceFolder}/client/src/*.cpp",
                "${workspaceFolder}/client/src/imgui/*.cpp",
                "${workspaceFolder}/client/src/game/*.cpp",
                "${workspaceFolder}/client/src/entity/*.cpp",
                "${workspaceFolder}/client/src/ammunition/*.cpp",
                "${workspaceFolder}/client/src/enemy/*.cpp",
                "${workspaceFolder}/client/src/particules/*.cpp",
                "${workspaceFolder}/client/src/client/*.cpp",

                "/I", "${workspaceFolder}/client/include/",
                "/I", "${workspaceFolder}/client/include/imgui/",
                "/I", "${workspaceFolder}/vendor/SFML_x64/SFML/include",

                "/link", "/verbose:incr", "/time",
                "/LIBPATH:${workspaceFolder}/vendor/SFML_x64/SFML/x64_msvc_2019/debug/",
                //"flac.lib","freetype.lib", "ogg.lib", "openal32.lib",
                "opengl32.lib",
                "sfml-window-d.lib",
                "sfml-system-d.lib",
                "sfml-graphics-d.lib",
                "sfml-audio-d.lib",
                "sfml-network-d.lib",
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

        { // New release build
            "type": "shell",
            "label": "msvc++: [x64_Release] Client build",
            "command": "cl.exe",
            "args": [
                "/std:c++latest",
                "/EHsc",
                "/MD",
                "/O2",
                "/GL",
                "/MP",

                "/Fe:", "${workspaceFolder}/client/build/x64_Release/client.exe",

                "${workspaceFolder}/client/src/*.cpp",
                "${workspaceFolder}/client/src/imgui/*.cpp",
                "${workspaceFolder}/client/src/game/*.cpp",
                "${workspaceFolder}/client/src/entity/*.cpp",
                "${workspaceFolder}/client/src/ammunition/*.cpp",
                "${workspaceFolder}/client/src/enemy/*.cpp",
                "${workspaceFolder}/client/src/particules/*.cpp",
                "${workspaceFolder}/client/src/client/*.cpp",

                "/I", "${workspaceFolder}/client/include/",
                "/I", "${workspaceFolder}/client/include/imgui/",
                "/I", "${workspaceFolder}/vendor/SFML_x64/SFML/include",

                "/link", "/verbose:incr", "/time",
                "/LIBPATH:${workspaceFolder}/vendor/SFML_x64/SFML/x64_msvc_2019/release/",
                //"flac.lib","freetype.lib", "ogg.lib", "openal32.lib",
                "opengl32.lib",
                "sfml-main.lib",
                "sfml-window.lib",
                "sfml-system.lib",
                "sfml-graphics.lib",
                "sfml-audio.lib",
                "sfml-network.lib",
                "/SUBSYSTEM:WINDOWS"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

        { // Old debug build with precompiled binaries
            "type": "shell",
            "label": "msvc++: [x64_Debug] Client build [OLD]",
            "command": "cl.exe",
            "args": [
                "/DEBUG",
                "/std:c++latest",
                "/EHsc",
                "/MDd",
                "/Zi",
                "/MP",

                "/Fe:", "${workspaceFolder}/client/build/x64_Debug_old/client.exe",

                "${workspaceFolder}/client/src/*.cpp",
                "${workspaceFolder}/client/src/imgui/*.cpp",
                "${workspaceFolder}/client/src/game/*.cpp",
                "${workspaceFolder}/client/src/entity/*.cpp",
                "${workspaceFolder}/client/src/ammunition/*.cpp",
                "${workspaceFolder}/client/src/enemy/*.cpp",
                "${workspaceFolder}/client/src/particules/*.cpp",
                "${workspaceFolder}/client/src/client/*.cpp",

                "/I", "${workspaceFolder}/client/include/",
                "/I", "${workspaceFolder}/client/include/imgui/",
                "/I", "${workspaceFolder}/vendor/SFML_x64/SFML-2.5.1/include",

                "/link", "/verbose:incr", "/time",
                "/LIBPATH:${workspaceFolder}/vendor/SFML_x64/SFML-2.5.1/lib/",
                //"flac.lib","freetype.lib", "ogg.lib", "openal32.lib",
                "opengl32.lib",
                "sfml-window-d.lib",
                "sfml-system-d.lib",
                "sfml-graphics-d.lib",
                "sfml-audio-d.lib",
                "sfml-network-d.lib",
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

        {
            "type": "shell",
            "label": "msvc++: Server x64 debug build",
            "command": "cl.exe",
            "args": [
                "/DEBUG",
                "/Zi",
                "/EHsc",
                "/std:c++latest",
                "/MDd",
                "/MP",
                "/Fe:",
                "${workspaceFolder}/server/build/x64_Debug/server.exe",
                "${workspaceFolder}/server/src/*.cpp",
                "/I",
                "${workspaceFolder}/server/include/",
                "/I",
                "${workspaceFolder}/vendor/SFML_x64/SFML-2.5.1/include",
                "/link",
                "/verbose:incr",
                "/time",
                "/LIBPATH:${workspaceFolder}/vendor/SFML_x64/SFML-2.5.1/lib/",
                "sfml-system-d.lib",
                "sfml-network-d.lib",
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
    ],
    "version": "2.0.0"
}